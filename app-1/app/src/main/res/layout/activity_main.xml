<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="135dp"
        android:layout_height="58dp"
        android:layout_marginBottom="446dp"
        android:backgroundTint="@color/colorPrimary"
        android:shadowColor="#FF0808"
        android:text="Aceptar"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDato" />

    <TextView
        android:id="@+id/lblDato"
        android:layout_width="341dp"
        android:layout_height="31dp"
        android:layout_marginBottom="41dp"
        android:text="@string/informaci_n"
        app:layout_constraintBottom_toTopOf="@+id/btnAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="385dp"
        android:layout_height="63dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="@string/captura_tu_nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/lblDato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />
</androidx.constraintlayout.widget.ConstraintLayout>